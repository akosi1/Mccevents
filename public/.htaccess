<IfModule mod_rewrite.c>
    RewriteEngine On

    # âœ… Allow static files inside public
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]

    # âœ… Redirect css, js, images to /public
    RewriteRule ^(css|js|images|storage)/(.*)$ public/$1/$2 [L]

    # ðŸš€ Send everything else to Laravel
    RewriteRule ^ index.php [L]
</IfModule>
