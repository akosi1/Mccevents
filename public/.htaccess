<IfModule mod_rewrite.c>
    RewriteEngine On

    # âœ… Allow direct access to existing files (PHP, CSS, JS, images, etc.)
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]

    # âœ… Allow direct access to existing directories
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # ðŸš€ Otherwise, send everything into Laravel
    RewriteRule ^ index.php [L]
</IfModule>
