<IfModule mod_rewrite.c>
    RewriteEngine On

    # âœ… Serve existing files (like test1.php) directly
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]

    # âœ… Serve existing directories directly
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # âœ… Redirect requests for assets (css, js, images) into /public
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(css|js|images|storage)/(.*)$ public/$1/$2 [L]

    # ðŸš€ Everything else goes to Laravel index.php in root
    RewriteRule ^ index.php [L]
</IfModule>
