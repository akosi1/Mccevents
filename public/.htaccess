<IfModule mod_rewrite.c>
    RewriteEngine On

    # âœ… If the request is for an existing file (like try.php, css, js, images), serve it directly
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]

    # âœ… If the request is for an existing folder, serve it directly
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # ðŸš€ Otherwise, send everything else to Laravel (index.php)
    RewriteRule ^ index.php [L]
</IfModule>
